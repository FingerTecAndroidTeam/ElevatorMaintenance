<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/main_tv_time"
            android:layout_width="wrap_content"
            android:minHeight="@dimen/avatarSize"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/smallSpace"
            android:gravity="center"
            android:text="1"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/main_tv_from"
            android:layout_width="0dp"
            android:minHeight="@dimen/avatarSize"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/smallSpace"
            android:layout_weight="1.0"
            android:gravity="center|left"
            android:text="杂物和垃圾清扫，清洁"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:scaleType="centerInside"
            android:id="@+id/main_tv_work"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/uncompleted"/>
    </LinearLayout>
</LinearLayout>
